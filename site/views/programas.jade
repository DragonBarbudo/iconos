    .col10
      h1(data-fittext, data-fittext-load-delay="500") {{datos.nombre}}
      h2(data-sr="enter bottom wait 500ms") {{datos.nivel}}
hr

.container
  .col3.col-t12.col-m12
    .nextDate
      .text
        .m Mayo
        .d 23
        .a 2016
      .svg(data="site/img/mainPolygon.svg")
      .prox Próximo inicio
  .col8.col-t12.col-m12
    .description.text(marked="descripcionMD")

hr
.container
  .col12
    .buttonsliders
      div Objetivos particulares
      div Perfil de ingreso
      div Plan de estudios
      div Requisitos de ingreso
      div Solicitar información
    .slider.rvoe
      div: div(marked="objetivosMD").text.objetivos
      div: div(marked="perfilMD").text.perfil
      div: div(marked="planMD").text.plan
      div: div(marked="requisitosMD").text.requisitos
      div.info.noleftline
        .container
          .col6.col-t12.col-m12
            p.big Llámanos
            p.small 
              span.light 01 55 
              |  | 5709 4370 | 57096593 | 57094396
            p.big Ubícanos
            p.small
              | Av. 
              span.light Chapultepec 57
              | , 1er y 2do piso, Col. Centro C.P. 06040. 
              span.light México, D.F.
          .col6.col-t12.col-m12
            p.big Nosotros te contactamos
            .nodesktop.notablet.nomobile {{interesados = 'Interesado en ' +datos.nombre}}
            form(action="http://dragonbarbudo.com/api/email.php").container
              input(type="hidden", name="_to", value="info@iconos.edu.mx")
              input(type="hidden", name="_from", value="info@iconos.edu.mx")
              input(type="hidden", name="_subject", value="Contáctenme iconos / home")
              .col6
                input(type="text", placeholder="Nombre", name="Nombre").large
                input(type="email", placeholder="Correo electrónico", name="Correo").large
                
                input(type="text", placeholder="Información", name="Informacion", ng-model="interesados").large
              .col6
                input(type="text", placeholder="Apellido", name="Apellido").large
                input(type="text", placeholder="Teléfono", name="Telefono").large
                br
                br
                label(for="moreInfo").light ¿Recibir información de ICONOS?
                .container
                .col6
                  input(type="radio", name="MasInfo", value="si", id="infosi")
                  label(for="infosi").dark Sí
                .col6
                  input(type="radio", name="MasInfo", value="no", id="infono")
                  label(for="infono").dark No
              .col12
                textarea(name="Comentarios", placeholder="Comentarios").medium
                button(type="submit")
                  .svg(data="site/img/btn-send.svg")

