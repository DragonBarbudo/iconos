mixin sidebar
  .btn-burger
    #openMenu
      .svg(data="site/img/iconos.svg").minilogo
      .svg(data="site/img/btn-burger.svg").burger
  .sidebar#menu
    .close: i.fa.fa-times
    a(href="index.html").logo: img(src="site/img/iconos.svg", alt="Iconos")
    .hr
    nav: +menu('', menu) 
    .hr
    .bottom
      .socials
        +socials
      .hr
      .privacy: a(href="aviso-de-privacidad.html") Aviso de privacidad
  .sidebar.submenu#submenu
    nav.sub(role="programas-de-estudio")
      +subItem('Licenciaturas', menuLic)
      +subItem('Maestrias', menuMae)
      +subItem('Especialidades', menuEsp)
      +subItem('Doctorado', menuDoc)
    nav.sub(role="cursos-y-diplomados")
      +subItem('Cursos y diplomados', menuCursos)
    nav.sub(role="docentes-y-estudiantes")
      +subItem('Docentes y estudiantes', menuDocentes)
    

mixin subItem(title, menuTo)
  .submenuTitle=title
  +menu('',menuTo)

